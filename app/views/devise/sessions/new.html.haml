%h2 Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .form-group
    = f.label :email, nil, class: 'small_label'
    = f.email_field :email, :autofocus => true,  class: "form-control"
  .form-group
    = f.label :password, nil, class: 'small_label'
    = f.password_field :password,  class: "form-control"
  - if devise_mapping.rememberable?
    .checkbox
      = f.check_box :remember_me
      = f.label :remember_me
  .form-group
    = button_tag "Sign in", :class => "btn btn-primary btn-block"
    = link_to "Password Reset", new_user_password_path