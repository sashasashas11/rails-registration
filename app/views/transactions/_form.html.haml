= form_for @transaction do |f|
  - if @transaction.errors.any?
    .alert.alert-danger
      #error_explanation
        %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
        %ul
          - @transaction.errors.full_messages.each do |msg|
            %li= msg
  .form-group
    = label_tag 'debit', nil, class: 'small_label'
    %br
    = select_tag 'transaction[debit]', options_from_collection_for_select(@debitAccounts, "id", "name", @transaction.accountA.try(:id)), class: 'form-control'
  .form-group
    = label_tag 'credit', nil, class: 'small_label'
    %br
    = select_tag "transaction[credit]", options_from_collection_for_select(@creditAccounts, "id", "name", @transaction.accountB.try(:id)), class: 'form-control'
  .form-group
    = label_tag 'amount', nil, class: 'small_label'
    = f.text_field :amount,  class: "form-control amount"
  .actions
    = f.submit 'Save', class: "btn btn-success"
